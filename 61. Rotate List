class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if (head == null){
            return head; 
        }

        int length = 1; 
        // should be ListNode dummy = head; 
        while (head.next != null){
            length ++; 
            Listnode dummy = head.next; // should be dummy = dummy.next;
            //otherwise it does not record anything 
        }

        int position = k % length; 
        if (position == 0){
            return head; 
        }
        Listnode current = head; 
        for (int i = 0; i < k - position - 1; i++){ // i < length - position -1
            current = current.next; 
        }
        Listnode newhead = current.next; 
        current = null; 
        dummy = head; 
        return newhead; 
        // the last two should be: 
        //current.next = null; 
        //dummy.next = head; 
    }
}
Corrected by GPT:
class Solution {
    public ListNode rotateRight(ListNode head, int k) {
        if (head == null){
            return head; 
        }

        int length = 1; 
        ListNode dummy = head; 

        while (dummy.next != null){
            length ++; 
            dummy = dummy.next; 
        }

        int position = k % length; 
        if (position == 0){
            return head; 
        }

        ListNode current = head; 
        for (int i = 0; i < length - position - 1; i++){
            current = current.next; 
        }
        ListNode newhead = current.next; 
        current.next = null; 
        dummy.next = head; 

        return newhead; 
    }
}
